<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBack"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        android:text="<- back"
        android:background="@android:color/transparent"
        android:gravity="start|center_vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="0dp"

        android:fontFamily="@font/ibm_plex_mono_medium"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="asteroids today"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:fontFamily="@font/ibm_plex_mono_medium"
        />

    <View
        android:id="@+id/astDecorLine"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"

        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="some asteroids are approaching our planet. don’t worry: they travel across the Space all the time and most of them aren’t dangerous."
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/astDecorLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:fontFamily="@font/ibm_plex_mono_regulat"
        android:textSize="18sp"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/tvText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="see the info about them."
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:fontFamily="@font/ibm_plex_mono_regulat"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tvText3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="and no, we’re not gonna end up like dinosaurs."

        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:fontFamily="@font/ibm_plex_mono_regulat"
        android:textSize="18sp"
        android:layout_marginTop="20dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAsteroids"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvText3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
